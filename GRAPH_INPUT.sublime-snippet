int n, m;
vector<vector<int>> graph(N);


void reset(bool flg = 1){
    for(int i = 0; i <= n; i++){
        if(flg)graph[i].clear();
    }
}

void _(){
    cin >> n;
    reset();
    for(int i = 1; i < n; i++){
        int x, y;
        cin >> x >> y;
        graph[x].push_back(y);
        graph[y].push_back(x);
    }

    

}

