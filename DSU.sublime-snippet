	<content><![CDATA[
class Dsu{
  vector<int> par, sz;
public:
  Dsu(int n = 2e5) : par(n + 1), sz(n + 1, 1){
    iota(par.begin(), par.end(), 0);
  }
  int Find(int v){
    return par[v] = (par[v] == v) ? v : Find(par[v]);
  }
  void Union(int a, int b){
    a = Find(a);
    b = Find(b);
    if(a == b)return;
    if(sz[a] < sz[b])swap(a, b);
    par[b] = a;
    sz[a] += sz[b];
  }
};
  

]]></content>
	<tabTrigger>DSU</tabTrigger>
	<scope>source.c++</scope>
</snippet>

